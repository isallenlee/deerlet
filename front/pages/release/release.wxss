  vertical-align: middle;
  font-size: 30rpx;
  /* float: right; *//* margin-right: 20rpx; */
}

.release_start_data_view_image1 {
  width: 40rpx;
  height: 40rpx;
  /* float: right; */
  vertical-align: middle;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.release_start_data_view_right {
  float: right;
}

.release_start_data_view_text {
  vertical-align: middle;
  font-size: 30rpx;
}

.address_view {
  /* display: flex; */
