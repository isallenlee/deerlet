/* pages/release/release.wxss */

.release_view {
  display: flex;
  flex-direction: column;
}

.the_cover_view {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* margin-top: 30rpx; */
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
}

.the_cover_view_images {
  /* width: 100%; */
  height: 380rpx;
  /* margin-bottom: 20rpx; */
}

.the_cover_view_text {
  color: #999;
  font-size: 28rpx;
}

.the_content_view {
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #ededed;
}

.the_content_title_view {
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #ededed;
}

.the_content_title_view image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.the_content_title_view input {
  vertical-align: middle;
}

.the_content_content {
  margin: 20rpx;
  padding-bottom: 20rpx;
  /* border-bottom: 1px solid #ededed; */
}

.the_content_content textarea {
  width: 100%;
  font-size: 28rpx;
}

.the_content_add_images_view {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 1px solid #ededed;
}

.the_content_add_images_view image {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.the_content_add_images_view text {
  float: righe;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.release_start_data_view {
  flex-direction: row;
  margin-top: 20rpx;
  border-bottom: 1px solid #ededed;
  padding-bottom: 20rpx;
}

.release_start_data_view_image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

