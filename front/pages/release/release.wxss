  margin-top: 20rpx;
  border-bottom: 1px solid #ededed;
  padding-bottom: 20rpx;
  font-size: 30rpx;
}

.address_view text {
  vertical-align: middle;
}

.address_view image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.address {
  flex-direction: row;
  float: right;
  display: block;
}

.address input {
  flex-direction: row;
  float: right;
}

.address image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.address text {
  vertical-align: middle;
}

.user_infos {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
