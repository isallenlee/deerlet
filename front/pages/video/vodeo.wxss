/* pages/video/vodeo.wxss */

.video_top {
  display: flex;
  flex-direction: column;
}

.top_top_view {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.top_top_view image {
  width: 100%;
  height: 330rpx;
  filter: blur(6px);
  -webkit-filter: blur(6px);
  -ms-filter: blur(6px);
  -moz-filter: blur(6px);
}

.top_view {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 120rpx;
  position: absolute;
  justify-content: center;
  border-radius: 15rpx;
  z-index: 10000;
}

.top_view text {
  vertical-align: middle;
  font-size: 50rpx;
  margin-right: 20rpx;
  color: #fff;
  font-weight: bold;
}

.top_view button {
  vertical-align: middle;
  font-size: 33rpx;
  color: #fff;
  background: #eb4901;
  float: right;
  margin-top: 20rpx;
}

.lie {
  /*border: 1px solid #ccc;*/
  margin-top: 40rpx;
  flex-direction: column;
}

.content_view {
  flex-direction: column;
  height: 600rpx;
}

.user_content {
  display: flex;
  flex-direction: row;
  margin: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  margin-top: 10rpx;
}

.content {
  flex-direction: column;
  margin-left: 25rpx;
  width: 100%;
}

/* .content text {
  font-size: 26rpx;
} */

.user_name {
  color: #369;
  font-size: 26rpx;
}

.user_centent {
  margin-right: 20rpx;
  font-size: 26rpx;
}

.content_image {
  margin-top: 10rpx;
}

.content image {
  width: 50%;
}

.content_date {
  color: #999;
  font-size: 22rpx;
  margin-right: 50rpx;
}

.content_del {
  color: #369;
  font-size: 22rpx;
}

.fengexian {
  border-bottom: 1px solid #ededed;
}

.content_foot view {
  float: right;
  vertical-align: middle;
}

.content_foot view image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.content_foot view text {
  vertical-align: middle;
  margin-left: 10rpx;
  font-size: 26rpx;
}

.address_s {
  font-size: 20rpx;
  color: #369;
}
