/* pages/index/Eventdetails/details/details.wxss */

.details_view {
  display: flex;
  flex-direction: column;
  vertical-align: middle;
}

.details_view_details_view {
  display: flex;
  flex-direction: column;
  vertical-align: middle;
  border: 1px solid #ededed;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx; 
  border-radius: 20rpx;
}

.details_view_details_images_view {
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
  padding-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
  /* margin-left: 20rpx; *//* margin-right: 20rpx;  */
  border-bottom: 1px solid #ededed;
}

.details_view_details_images_view image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.details_view_details_images_view text {
  font-size: 33rpx;
  vertical-align: middle;
  font-weight: 500;
}

.details_view_details_text_view {
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
  padding-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx; 
  padding-bottom: 20rpx;
}

.details_view_details_text_view text {
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
  text-align: center;
  font-size: 28rpx;
}

.details_view_details_text_view image {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
}
