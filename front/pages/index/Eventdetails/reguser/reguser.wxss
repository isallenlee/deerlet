/* pages/index/Eventdetails/reguser/reguser.wxss */
/* @import '../Eventdetails.wxss'; */
.reguser_views {
  display: flex;
  flex-direction: column;
  vertical-align: middle;
}

.reguser_views_user_views {
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
  border: 1px solid #ededed;
  vertical-align: middle;
}

.reguser_views_user_images_view {
  display: flex;
  flex-direction: column;
  vertical-align: middle;
}

.reguser_views_user_images_view_images {
  width: 160rpx;
  height: 160rpx;
  border: 2px solid #eb4901;
  border-radius: 100rpx;
  vertical-align: middle;
}

.reguser_male_views {
  /* display: flex; */
  flex-direction: row;
  vertical-align: middle;
  align-items: center;
}

.reguser_male_views_images {
  width: 30rpx;
  height: 30rpx;
  margin-left: 5rpx;
  vertical-align: middle;
}

.reguser_views_user_text_view {
  display: flex;
  margin-left: 10rpx;
  flex-direction: column;
  vertical-align: middle;
  margin-top: 20rpx;
}

.reguser_views_user_text_view text {
  vertical-align: middle;
}

.reguser_views_user_text_name {
  font-size: 32rpx;
  vertical-align: middle;
}

.reguser_views_user_text_centent {
  font-size: 25rpx;
display:-webkit-box;
width:300rpx;
/* word-break:break-all; */
-webkit-box-orient:vertical;
-webkit-line-clamp:1;
overflow:hidden;
text-overflow:ellipsis;
color:#999999;

}

.reguser_info_view {
  /* display: flex; */
  flex-direction: column;
  vertical-align: middle;
  /* background: #eb4901; */
  border-radius: 20rpx;
  align-items: center;
  display: flex;
  position: absolute;
  justify-content: center;
  margin-top: -5rpx;
  right: 50rpx;
}

.reguser_info_view_text {
  color: #eb4901;
  font-weight: bolder;
  font-size: 28rpx;
  vertical-align: middle;
}
.sssss{
  color: #000000;
  margin-top: 20rpx;
  font-weight:600;
}
.user_info_view{
  display: flex;
  flex-direction: column;
  background: #FFFFFF;
  z-index: 99999;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-radius: 20rpx;
  font-size: 35rpx;
  font-weight: 300;
}
/*遮盖层开始  */

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.8;
}

/*遮盖层结束  */
.sharing_view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
