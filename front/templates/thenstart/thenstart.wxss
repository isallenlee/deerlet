/*即将开始  */

.the_start {
  display: flex;
  flex-direction: column;
}

.the_top_view {
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.the_start_image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.the_start_text {
  /* display:flex; */
  font-size: 30rpx;
  margin-right: 20rpx;
  vertical-align: middle;
  font-weight: 500;
}

.the_right_image {
  width: 30rpx;
  height: 30rpx;
  float: right;
  position: absolute;
  justify-content: center;
  right: 20rpx;
  vertical-align: middle;
  margin-top: 5px;
}

.fengexian {
  border-bottom: 1px solid #ededed;
}

