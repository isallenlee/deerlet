.start_content_view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.start_content_title {
  font-size: 38rpx;
  color: #000;
  display: block;
  display: -webkit-box;
  width: 360rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-align: center;
  text-overflow: ellipsis;
}

.start_content_prompt {
  font-size: 38rpx;
  color: #999;
